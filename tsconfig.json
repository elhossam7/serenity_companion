{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "vitest/globals"],
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "contexts/*": ["src/contexts/*"],
      "services/*": ["src/services/*"],
      "lib/*": ["src/lib/*"],
      "pages/*": ["src/pages/*"],
      "utils/*": ["src/utils/*"],
      "src/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "vite.config.mjs",
    "tailwind.config.js",
    "postcss.config.js",
    "vitest.setup.ts",
    "src/**/*.test.*",
    "src/setupTests.js"
  ],
  "exclude": ["node_modules", "dist"]
}
